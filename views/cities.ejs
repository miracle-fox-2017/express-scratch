<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%include ./partials/head%>
    <title>Cities</title>
  </head>
  <body>
      <%include ./partials/menu%>
      <div class="uk-section">
          <div class="uk-container">
            <table class="uk-table uk-table-hover uk-table-divider">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Province</th>
                        <th colspan="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <%cities.forEach(dataCities=>{%>
                    <tr>
                        <td><%=dataCities.id%></td>
                        <td><%=dataCities.name%></td>
                        <td><%=dataCities.province%></td>
                        <td><a href="cities/edit/">Edit</a></td>
                        <td><a href="cities/delete/">Delete</a></td>
                    </tr>
                    <%})%>
                </tbody>
            </table>
              <form action="/cities/add" method="post">
                    <div class="uk-margin">
                        <input class="uk-input uk-form-width-medium" name="id" type="text" placeholder="Id">
                    </div>
                    <div class="uk-margin">
                        <input class="uk-input uk-form-width-medium" name="name" type="text" placeholder="Name">
                    </div>
                    <div class="uk-margin">
                        <input class="uk-input uk-form-width-medium" name="province" type="text" placeholder="Province">
                    </div>
                    <p uk-margin>
                        <button class="uk-button uk-button-default uk-button-small">Simpan</button>
                    </p>
              </form>
          </div>
      </div>
  </body>
</html>
