<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User</title>
  </head>
  <body>
    <h1>User</h1>
    <table>
      <thead>
      <tr>
        <th>id</th>
        <th>username</th>
        <th>password</th>
        <th>email</th>
        <th>option</th>
      </tr>
      <thead>
        <tbody>
          <%users.forEach(row=>{%>
          <tr>
            <td><%= row.id%></td>
            <td><%= row.username%></td>
            <td><%= row.password%></td>
            <td><%= row.email%></td>

            <td>
              <a href="/users/edit/<%=row.id%>">Edit</a>
              <a href="/users/delete/<%=row.id%>">Delete</a>
            </td>
          </tr>
        <%})%>
        </tbody>
    </table>
    <h4><a href="/users/addUser">Add</a></h4>
  </body>
  <style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>
</html>
