<!DOCTYPE html>
<html>
<head>
	<title>User's Table</title>
</head>
<body>
<%let lastIdx = 0%>
	<table>
		<tr>
			<th>Id</th>
			<th>Username</th>
			<th>Password</th>
			<th>Email</th>
			<th>Action</th>
		</tr>
		<%objUser.forEach(user=>{
			lastIdx = user.id+1%>
		<tr>
			<td><%=user.id%></td>
			<td><%=user.username%></td>
			<td><%=user.password%></td>
			<td><%=user.email%></td>
			<td>
				<a href="/editUser/<%=user.id%>">Edit</a>
				<a href="/deleteUser/<%=user.id%>">Delete</a>
			</td>
		</tr>
		<%})%>
	</table>
	<h3>Add User</h3>
	<form action="/addUser/<%=lastIdx%>" method="post">
		<input type="text" name="username" placeholder="Username">
		<input type="text" name="password" placeholder="Password">
		<input type="text" name="email" placeholder="Email">
		<input type="submit" value="Submit">		
	</form>

</body>
</html>